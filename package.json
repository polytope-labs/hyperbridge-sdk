{
	"name": "hyperbridge-indexers",
	"version": "0.0.1",
	"description": "Indexers for Hyperbridge",
	"main": "dist/index.js",
	"scripts": {
		"build": "subql build",
		"codegen": "subql codegen",
		"generate-configs": "node generate-chain-yamls.js && node generate-compose.js",
		"start:docker": "npm run generate-configs && docker-compose pull && docker-compose up --remove-orphans",
		"start:local": "npm run generate-configs && docker-compose -f docker-compose.testnet.yml up --remove-orphans",
		"dev": "export CURRENT_ENV=test subql codegen && subql build && npm run start:local",
		"prod": "export CURRENT_ENV=prod subql codegen && subql build && npm run start:docker",
		"prepack": "rm -rf dist && npm run build",
		"test": "subql build && subql-node-ethereum -f=base-sepolia.yaml test",
		"format": "prettier --write ."
	},
	"homepage": "https://hyperbridge.network/",
	"repository": "https://github.com/polytope-labs/hyperbridge-indexer",
	"files": [
		"dist",
		"schema.graphql",
		"subquery-multichain.yaml",
		"chain-configs-prod.json",
		"chain-configs-test.json"
	],
	"author": "Polytope Labs",
	"license": "MIT",
	"dependencies": {
		"@bifrost-finance/type-definitions": "^1.11.9",
		"@ethersproject/shims": "^5.7.0",
		"@open-web3/orml-type-definitions": "^2.0.1",
		"@polkadot/api": "latest",
		"@subql/common": "latest",
		"@subql/common-ethereum": "^4.5.5",
		"@subql/types-ethereum": "latest",
		"@subql/validator": "latest",
		"assert": "^2.0.0",
		"dotenv": "^16.4.7"
	},
	"devDependencies": {
		"@subql/cli": "latest",
		"@subql/node": "latest",
		"@subql/node-core": "latest",
		"@subql/node-ethereum": "latest",
		"@subql/testing": "latest",
		"@subql/types": "latest",
		"@types/pino": "^7.0.4",
		"ethers": "^5.7.2",
		"prettier": "^3.5.2",
		"tslib": "^2.8.1",
		"typescript": "latest"
	},
	"exports": {
		"substrate-chaintypes/hyperbridge": "src/substrate-chaintypes/hyperbridge.ts"
	}
}
