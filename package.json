{
	"name": "hyperbridge-indexers",
	"version": "0.0.1",
	"description": "Indexers for Hyperbridge",
	"main": "dist/index.js",
	"scripts": {
		"build": "subql build",
		"codegen": "subql codegen -f configs",
		"generate-configs": "node generate-chain-yamls.js && node generate-compose.js",
		"start:docker": "npm run generate-configs && docker-compose -f docker/docker-compose.yml pull && docker-compose -f docker/docker-compose.yml --env-file .env up --force-recreate --remove-orphans",
		"start:local": "npm run generate-configs && docker-compose -f docker/docker-compose.testnet.yml --env-file .env up --force-recreate --remove-orphans && docker-compose -f docker/docker-compose.testnet.yml rm -fsv",
		"dev": "CURRENT_ENV=test subql codegen -f=configs && subql build && npm run start:local",
		"prod": "export CURRENT_ENV=prod subql codegen && subql build && npm run start:docker",
		"prepack": "rm -rf dist && npm run build",
		"test": "jest --runInBand",
		"format": "prettier --write \"**/*.ts\""
	},
	"homepage": "https://hyperbridge.network/",
	"repository": "https://github.com/polytope-labs/hyperbridge-indexer",
	"files": [
		"dist",
		"configs",
		"configs/schema.graphql",
		"configs/subquery-multichain.yaml",
		"configs/chain-configs-prod.json",
		"configs/chain-configs-test.json"
	],
	"author": "Polytope Labs",
	"license": "MIT",
	"dependencies": {
		"@bifrost-finance/type-definitions": "^1.11.9",
		"@ethersproject/abi": "^5.7.0",
		"@ethersproject/providers": "^5.7.2",
		"@ethersproject/shims": "^5.7.0",
		"@open-web3/orml-type-definitions": "^2.0.1",
		"@polkadot/api": "latest",
		"@polkadot/types": "^15.6.1",
		"@polkadot/util-crypto": "^13.4.3",
		"@subql/common": "latest",
		"@subql/common-ethereum": "^4.5.5",
		"@subql/types-core": "^2.0.1",
		"@subql/types-ethereum": "latest",
		"@subql/validator": "latest",
		"assert": "^2.0.0",
		"dotenv": "^16.4.7",
		"fast-text-encoding": "^1.0.6",
		"scale-ts": "^1.6.1",
		"viem": "^2.23.5"
	},
	"devDependencies": {
		"@subql/cli": "latest",
		"@subql/node": "latest",
		"@subql/node-core": "latest",
		"@subql/node-ethereum": "latest",
		"@subql/testing": "latest",
		"@subql/types": "latest",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.13.5",
		"@types/pino": "^7.0.4",
		"ethers": "^5.7.2",
		"prettier": "^3.5.2",
		"ts-jest": "^29.2.6",
		"ts-node": "^10.9.2",
		"tslib": "^2.8.1",
		"typescript": "latest"
	},
	"exports": {
		"substrate-chaintypes/hyperbridge": "src/substrate-chaintypes/hyperbridge.ts"
	}
}