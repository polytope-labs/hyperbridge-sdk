{
 "name": "hyperbridge-workspace",
 "private": true,
 "version": "0.1.0",
 "description": "Hyperbridge monorepo workspace for client sdk and indexer",
 "workspaces": [
  "packages/*"
 ],
 "scripts": {
  "build": "pnpm --filter=\"@hyperbridge/indexer\" build && pnpm --filter=\"@hyperbridge/sdk\" build",
  "test": "pnpm --filter=\"*\" test",
  "lint": "pnpm --filter=\"*\" lint",
  "format": "pnpm --filter=\"*\" format",
  "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist",
  "changeset": "changeset",
  "version-packages": "changeset version",
  "release": "pnpm build && pnpm changeset publish"
 },
 "devDependencies": {
  "@changesets/cli": "^2.28.1",
  "husky": "9.1.7",
  "lint-staged": "15.4.3",
  "prettier": "3.5.2",
  "typescript": "5.7.3"
 },
 "prettier": {
  "printWidth": 100,
  "semi": false,
  "trailingComma": "all"
 },
 "lint-staged": {
  "*.{js,ts,tsx}": [
   "prettier --write",
   "eslint --fix"
  ]
 },
 "engines": {
  "node": ">=22",
  "pnpm": ">=7"
 }
}