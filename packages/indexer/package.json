{
	"name": "@hyperbridge/subql",
	"version": "1.0.0",
	"description": "SubQuery indexer for the Hyperbridge network. Indexes data from connected rollups and Hyperbridge's messaging infrastructure",
	"main": "dist/index.js",
	"homepage": "https://hyperbridge.network/",
	"repository": {
		"type": "git",
		"url": "https://github.com/polytope-labs/hyperbridge-sdk"
	},
	"bugs": {
		"url": "https://github.com/polytope-labs/hyperbridge-sdk/issues"
	},
	"files": [
		"dist",
		"configs",
		"configs/schema.graphql",
		"configs/subquery-multichain.yaml",
		"configs/chain-configs-prod.json",
		"configs/chain-configs-test.json"
	],
	"author": "Polytope Labs",
	"license": "MIT",
	"keywords": [
		"hyperbridge",
		"subquery",
		"indexer",
		"blockchain",
		"graphql",
		"cryptocurrency",
		"interoperability"
	],
	"engines": {
		"node": ">=22"
	},
	"scripts": {
		"build": "subql build",
		"codegen:subql": "subql codegen -f configs",
		"codegen:yamls": "node generate-chain-yamls.js && node generate-compose.js",
		"start:docker": "docker-compose -f docker/docker-compose.yml --env-file ../../.env up -d --force-recreate --remove-orphans",
		"start:local": "docker-compose -f docker/docker-compose.testnet.yml --env-file ../../.env up --force-recreate --remove-orphans && docker-compose -f docker/docker-compose.testnet.yml  --env-file ../../.env rm -fsv",
		"local": "CURRENT_ENV=local npm run codegen:yamls && npm run codegen:subql && npm run build && npm run start:local",
		"testnet": "CURRENT_ENV=testnet npm run codegen:yamls && npm run codegen:subql && npm run build && npm run start:docker",
		"mainnet": "CURRENT_ENV=mainnet npm run codegen:yamls && npm run codegen:subql && npm run build && npm run start:docker",
		"prepack": "rm -rf dist && npm run build",
		"test": "jest --runInBand --detectOpenHandles",
		"format": "prettier --write \"**/*.ts\"",
		"clean": "rm -rf dist node_modules",
		"lint": "eslint \"src/**/*.ts\"",
		"lint:fix": "eslint \"src/**/*.ts\" --fix"
	},
	"dependencies": {
		"@bifrost-finance/type-definitions": "^1.11.9",
		"@ethersproject/abi": "^5.7.0",
		"@ethersproject/providers": "^5.7.2",
		"@ethersproject/shims": "^5.7.0",
		"@open-web3/orml-type-definitions": "^2.0.1",
		"@polkadot/api": "latest",
		"@polkadot/types": "^15.6.1",
		"@polkadot/util-crypto": "^13.4.3",
		"@subql/common": "latest",
		"@subql/common-ethereum": "^4.5.5",
		"@subql/types-core": "^2.0.1",
		"@subql/types-ethereum": "latest",
		"@subql/validator": "2.2.0",
		"assert": "^2.0.0",
		"dotenv": "^16.4.7",
		"fast-text-encoding": "^1.0.6",
		"scale-ts": "^1.6.1",
		"viem": "^2.23.5"
	},
	"devDependencies": {
		"@subql/cli": "5.7.0",
		"@subql/node": "5.9.1",
		"@subql/node-core": "17.0.2",
		"@subql/node-ethereum": "5.5.0",
		"@subql/testing": "2.2.4",
		"@subql/types": "3.12.1",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.13.5",
		"@types/pino": "^7.0.4",
		"ethers": "^5.7.2",
		"prettier": "^3.5.2",
		"rpc-websocket-client": "^1.1.4",
		"ts-jest": "^29.2.6",
		"ts-node": "^10.9.2",
		"tslib": "^2.8.1",
		"typescript": "latest"
	},
	"exports": {
		"./substrate-chaintypes/hyperbridge": "./src/substrate-chaintypes/hyperbridge.ts"
	},
	"publishConfig": {
		"access": "public"
	}
}
