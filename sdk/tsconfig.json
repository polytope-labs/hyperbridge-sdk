{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"outDir": "./dist",
		"declaration": true,
		"sourceMap": true,
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"types": ["jest", "node"]
	},
	"include": ["src/**/*", "tests/**/*"],
	"exclude": ["node_modules", "dist"]
}
